@model IEnumerable<DataLibrary.Models.StreamModel>

@{
    ViewData["Title"] = "Stream Theater";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Game</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameTitle)
            </td>
            <td>
                @Html.ActionLink("Info", "Index", "StreamInfo", new { id = item.StreamID })
            </td>
        </tr>
        }
    </tbody>
</table>