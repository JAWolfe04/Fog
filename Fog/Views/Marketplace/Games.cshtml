@model IEnumerable<DataLibrary.Models.GameModel>

@{
    ViewData["Title"] = "Game Marketplace";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var price = item.price.ToString("C");
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => price)
            </td>
            <td>
                @Html.ActionLink("Info", "GameInfo", new { GameID = item.GameID })
            </td>
        </tr>
        }
    </tbody>
</table>